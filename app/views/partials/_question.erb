<form class="pure-form" action="/submitquiz" method="post">

    <li><%= @question_text %></li>
    <% @options.each do |line| %>
      <label for="option" class="pure-radio"><%= line.text %></label>
      <input type="hidden" id="question" name = "question" value=<%= line.question_id %> >
      <input id="option" type="radio" name = "option" value=<%= line.id %>>
    <% end %><br>
    <input class="pure-button submitBtn" type="submit" value="Submit">
</form>

